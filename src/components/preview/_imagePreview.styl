@include './_color-picker';

.preview
  position: absolute
  left: $sidebarWidth
  width: 540px
  top: 0
  bottom: 0
  padding: 20px
  background: $bg-dark
  color: #FFF
  padding: $padding

  .preview__canvas
    width: 500px
    height: 500px
    border: 1px solid #333
    background: #000
    cursor: crosshair

  #scaleBar
    width: 500px
    height: 30px

  .image-name
    background: none
    border: none
    color: #fff
    font-size: 2em
    border-bottom: 2px solid transparent
    margin-bottom: 10px
    outline: none
    width: 100%

    &:focus
      border-bottom-color: $primary

  .colors-panel
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0

  .colors-overlay
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    background: rgba(0,0,0,0.8)

  .colors-inner
    position: absolute
    background: $bg
    padding: 20px
    top: 50%
    transform: translateY(-50%)

  .presets
    float: left

  .color-preset
    width: 50px
    height: 30px
    cursor: pointer
    margin: 5px


  .color-picker-wrapper
    overflow: hidden
    margin-bottom: 10px

  .colors
    margin-bottom: 20px
    height: 50px
    width: 500px

    .color
      text-align: center
      height: 50px
      float: left
      margin-bottom: 5px
      cursor: pointer
      postion: relative
      &:active
        cursor: ew-resize!important

    .placeholder
      background: $secondary
      float: left
      height: 50px
      line-height: 50px
      text-align: center
      outline: 2px solid #000
      position: relative
      z-index: 1
      &:before
        content: "Drop here"
        color: white

    &.remove .color
      color: white
      &:after
        content: 'x'
        display: inline-block
        background: red
        padding: 2px 10px 4px
        margin: 13px
        border-radius: 50px
        font-weight: bold

      &:hover:after
        color: red
        background: white
