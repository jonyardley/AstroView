.sidebar
  position: absolute
  width: $sidebarWidth
  top: 0
  bottom: 0
  left: 0
  background: #333
  color: #FFF
  border-right: 1px solid rgba(255,255,255,0.1)

  &:after
    content: ''
    position: absolute
    top: 0
    bottom: 0
    width: 1px
    background: rgba(0,0,0,0.3)
    right: 0

.sidebar__logo
  width: 60px
  height: 60px
  background: url(../img/logo-white-transparent-40.png) no-repeat center center
  border-bottom: 1px solid rgba(0,0,0,0.3)